<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% if section == "home" %}
		{% set home = true %}
	{% endif %}

	{% include "components/head.njk" %}

	<body>

		<header>
			{% if home %}
				{% include "components/canvas.njk" %}
			{% endif %}
			<a id="logo" href="{{ '/' | url }}" title="{{ metadata.title }}">
				{% svgInline "static/img/logo.svg", "Logo VentoRelativo" %}
			</a>
			{% include "components/nav.njk" %}
		</header>

		<main>
			{{ layoutContent | safe }}
		</main>

		{% include "components/footer.njk" %}

		{% include "components/back-to-top.njk" %}
		<div hidden>
			{# https://github.com/11ty/eleventy-plugin-bundle#svg-icon-library #}
			<svg width="0" height="0" aria-hidden="true" style="position: absolute;">
				<defs>{% getBundle "html", "svg" %}</defs>
			</svg>
			{% html "svg" %}
				<g id="icon-chain">
					<path d="M4 9h1v1H4c-1.5 0-3-1.69-3-3.5S2.55 3 4 3h4c1.45 0 3 1.69 3 3.5 0 1.41-.91 2.72-2 3.25V8.59c.58-.45 1-1.27 1-2.09C10 5.22 8.98 4 8 4H4c-.98 0-2 1.22-2 2.5S3 9 4 9zm9-3h-1v1h1c1 0 2 1.22 2 2.5S13.98 12 13 12H9c-.98 0-2-1.22-2-2.5 0-.83.42-1.64 1-2.09V6.25c-1.09.53-2 1.84-2 3.25C6 11.31 7.55 13 9 13h4c1.45 0 3-1.69 3-3.5S14.5 6 13 6z"></path>
				</g>
				<g id="icon-link">
					<path d="m7.775 3.275 1.25-1.25a3.5 3.5 0 1 1 4.95 4.95l-2.5 2.5a3.5 3.5 0 0 1-4.95 0 .751.751 0 0 1 .018-1.042.751.751 0 0 1 1.042-.018 1.998 1.998 0 0 0 2.83 0l2.5-2.5a2.002 2.002 0 0 0-2.83-2.83l-1.25 1.25a.751.751 0 0 1-1.042-.018.751.751 0 0 1-.018-1.042Zm-4.69 9.64a1.998 1.998 0 0 0 2.83 0l1.25-1.25a.751.751 0 0 1 1.042.018.751.751 0 0 1 .018 1.042l-1.25 1.25a3.5 3.5 0 1 1-4.95-4.95l2.5-2.5a3.5 3.5 0 0 1 4.95 0 .751.751 0 0 1-.018 1.042.751.751 0 0 1-1.042.018 1.998 1.998 0 0 0-2.83 0l-2.5 2.5a1.998 1.998 0 0 0 0 2.83Z"></path>
				</g>
			{% endhtml %}

			{% getBundle "html", "footer" %}
			<script>
				{% getBundle "js", "footer" %}
			</script>
		</div>


	</body>

</html>
