<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>

		<header>
			{% if section=="home" %}
				{% include "components/canvas.njk" %}
			{% endif %}
			<a id="logo" href="{{ '/' | url }}" title="{{ metadata.title }}">
				<img src="/static/img/logo.png" width="752" height="384" alt="{{ metadata.title }} logo" />
			</a>
			{% include "components/nav.njk" %}
		</header>

		<main>
			{{ layoutContent | safe }}
		</main>

		{% include "components/footer.njk" %}

	</body>

</html>
